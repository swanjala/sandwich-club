<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/img_sandwich"
            android:layout_width="@dimen/img_sandwich_width"
            android:layout_height="@dimen/img_sandwich_height"
            android:layout_marginBottom="@dimen/img_sandwich_marginBottom"
            android:layout_marginEnd="@dimen/img_sandwich_margin_end"
            android:layout_marginRight="@dimen/img_sandwich_margin_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.012"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.428"
            app:srcCompat="@android:drawable/btn_star" />

        <TextView
            android:id="@+id/tv_sandwich_name"
            android:layout_width="@dimen/tv_sandwich_name_width"
            android:layout_height="@dimen/tv_sandwich_name_height"
            android:layout_marginBottom="@dimen/tv_sandwich_name_margin_bottom"
            android:layout_marginEnd="@dimen/tv_sandwich_name_margin_end"
            android:layout_marginLeft="@dimen/tv_sandwich_name_margin_left"
            android:layout_marginRight="@dimen/tv_sandwich_name_margin_right"
            android:layout_marginStart="@dimen/tv_sandwich_name_margin_start"
            android:layout_marginTop="@dimen/tv_sandwich_name_margin_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.26"
            app:layout_constraintStart_toEndOf="@+id/img_sandwich"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/bt_view_details"
            android:layout_width="@dimen/bt_view_details_width"
            android:layout_height="@dimen/bt_view_details_height"
            android:layout_marginEnd="@dimen/bt_view_details_margin_end"
            android:layout_marginLeft="@dimen/bt_view_details_margin_left"
            android:layout_marginRight="@dimen/bt_view_details_margin_right"
            android:layout_marginStart="@dimen/bt_view_details_margin_start"
            android:layout_marginTop="@dimen/bt_view_details_margin_top"
            android:background="@drawable/round_button"
            android:drawableLeft="@drawable/ic_restaurant_black_24dp"
            android:padding="@dimen/bt_view_details_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>